{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "client/dist/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "client/dist/favicon.ico"
    },
    {
      "src": "/favicon.svg",
      "dest": "client/dist/favicon.svg"
    },
    {
      "src": "/manifest.json",
      "dest": "client/dist/manifest.json"
    },
    {
      "src": "/logo192.svg",
      "dest": "client/dist/logo192.svg"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html"
    }
  ]
}
